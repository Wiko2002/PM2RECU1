<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2RECU1.Views.Detalle"
             Title="Detalle">


    <StackLayout Spacing="15" Padding="25">

        <Label x:Name="lblDescripcion" Text="{Binding Descripcion}" HeightRequest="200" BackgroundColor="white"/>
        

        <Button ImageSource="picture_ico.png"
                Clicked="OnBtnPictureClicked"/>


        <Button ImageSource="play_ico.png"
                x:Name="btnPlay"
                Clicked="OnBtnPlayClicked"/>


        <Button ImageSource="edit_ico.png"
                Clicked="OnBtnEditClicked"/>


        <Button ImageSource="delete_ico.png"
                BackgroundColor="Red"
                VerticalOptions="EndAndExpand"
                Clicked="OnBtnDeleteClicked"/>


    </StackLayout>
</ContentPage>